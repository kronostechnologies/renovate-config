{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["local>kronostechnologies/renovate-config:base.json5"],

  packageRules: [
    {
      "allowedVersions": "< 22",
      "description": "Limit Java version to 21. Kotlin doesn't support Java 25",
      "matchDatasources": [
        "java-version"
      ],
    },
    {
      "matchCategories": ["js"],
      "matchDepNames": [
        "styled-components"
      ],
      allowedVersions: "< 6.0.0"
    },
    {
      "matchCategories": ["js"],
      "matchDepNames": [
        "eslint"
      ],
      allowedVersions: "< 9.0.0"
    },
    {
      "matchCategories": ["js"],
      "matchDepNames": [
        "@types/react",
        "@types/react-dom",
        "@types/react-test-renderer",
        "react",
        "react-dom",
        "react-is",
        "react-test-renderer"
      ],
      allowedVersions: "< 19.0.0"
    },
    {
      "matchCategories": ["js"],
      "matchDepNames": [
        "react-router",
        "react-router-dom"
      ],
      allowedVersions: "< 7.0.0"
    }
  ]
}
